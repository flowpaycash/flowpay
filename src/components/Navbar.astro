<style>
  .premium-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 72px;
    background: rgba(10, 10, 10, 0.4);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 1000;
    display: flex;
    align-items: center;
    padding: 0 40px;
  }

  .nav-wrapper {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 50px;
  }

  .brand-logo img {
    height: 36px;
    width: auto;
    filter: drop-shadow(0 0 10px rgba(255, 0, 122, 0.3));
  }

  .nav-links {
    display: flex;
    gap: 32px;
  }

  .nav-item {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.95rem;
    font-weight: 600;
    transition: all 0.2s ease;
    letter-spacing: 0.02em;
  }

  .nav-item:hover {
    color: #ffffff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }

  .nav-item.admin {
    color: #ff007a;
    background: rgba(255, 0, 122, 0.1);
    padding: 4px 12px;
    border-radius: 8px;
  }
  
  .nav-item.admin:hover {
    background: rgba(255, 0, 122, 0.2);
    box-shadow: 0 0 15px rgba(255, 0, 122, 0.3);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .wallet-pill {
    display: flex;
    align-items: center;
    gap: 10px;
    background: rgba(255, 0, 122, 0.05);
    padding: 8px 18px;
    border-radius: 99px;
    font-size: 0.85rem;
    font-weight: 700;
    color: #ff007a;
    border: 1px solid rgba(255, 0, 122, 0.2);
    backdrop-filter: blur(10px);
  }

  .wallet-pill .dot {
    width: 8px;
    height: 8px;
    background: #ff007a;
    border-radius: 50%;
    box-shadow: 0 0 10px #ff007a;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.7; }
    100% { transform: scale(1); opacity: 1; }
  }

  .btn-nav {
    padding: 12px 24px;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .btn-nav.primary {
    background: #ffffff;
    color: #000000;
  }

  .btn-nav.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 768px) {
    .premium-nav {
      padding: 0 20px;
    }
    .nav-links, .wallet-pill {
      display: none;
    }
  }
</style>

<script>
  // NEO Layout Injector compatibility
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const navbar = document.querySelector('.neo-navbar');
      if (navbar) {
        navbar.setAttribute('data-neo-component', 'navbar');
      }
    });
  }
</script>

