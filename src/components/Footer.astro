---
import { Image } from 'astro:assets';
import headerLogo from '../../public/assets/icons/flowpay-header-logo.png';
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-section brand">
        <Image src={headerLogo} alt="FlowPay Logo" class="footer-logo" height={28} />
        <p>
          Simples. Rápido. <br />
          Powered by <strong>NEØ Smart Factory™</strong>
        </p>
      </div>

      <div class="footer-section links">
        <h4>Sobre</h4>
        <ul>
          <li><a href="#features">Recursos</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>FlowPay</p>
      <p>
        <a href="/checkout">Checkout</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    padding: 6rem 2rem 3rem;
    background: rgba(10, 10, 10, 0.6);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 2;
    overflow: hidden;
  }

  .site-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: linear-gradient(90deg, transparent, #ff007a, transparent);
    opacity: 0.5;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .footer-logo {
    height: 40px;
    width: auto;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 0 10px rgba(255, 0, 122, 0.3));
  }

  .footer-section h4 {
    font-size: 0.85rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
  }

  .footer-section p {
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.6;
    font-size: 1rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.8rem;
  }

  .footer-section a {
    color: rgba(255, 255, 255, 0.4);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    font-weight: 500;
    font-size: 0.95rem;
  }

  .footer-section a:hover {
    color: #ff007a;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding-bottom: env(safe-area-inset-bottom, 0px);
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .footer-bottom a {
    color: rgba(255, 255, 255, 0.3);
    text-decoration: none;
    transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .footer-bottom a:hover {
    color: #ff007a;
  }

  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
    .footer-section.brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 4rem 1.5rem 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-section.brand {
      grid-column: span 1;
      text-align: center;
    }

    .footer-section {
      text-align: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
