<section class="flow-step" data-state="choose" id="step-choose">
  <div class="mode-card">
    <div class="mode-chooser">
      <div class="segmented-control">
        <div class="segment-bg" id="segment-bg"></div>
        <button class="segment-btn active" data-action="select-mode" data-mode="pix">PIX</button>
        <button class="segment-btn" data-action="select-mode" data-mode="crypto">CRIPTO</button>
      </div>
    </div>

    <div class="mode-description">
      <h3 class="mode-title">FlowPay <span class="gradient-text">Sovereign</span></h3>
      <p class="mode-subtitle">Liquidez instantânea via PIX ou liquidação on-chain.</p>
    </div>

    <button
      class="ghost"
      data-action="connect-wallet"
      id="connect-wallet-btn"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="1" width="22" height="22" rx="2.18" ry="2.18"></rect><line x1="7" y1="1" x2="7" y2="23"></line></svg>
      Conectar Carteira
    </button>
  </div>
</section>

<style>
  .mode-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .mode-chooser {
    width: 100%;
  }

  .segmented-control {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 14px;
    padding: 4px;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  .segment-bg {
    position: absolute;
    top: 4px;
    left: 4px;
    width: calc(50% - 4px);
    height: calc(100% - 8px);
    background: rgba(255, 0, 122, 0.15);
    border: 1px solid rgba(255, 0, 122, 0.3);
    border-radius: 11px;
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 0;
  }

  .segment-btn {
    position: relative;
    z-index: 1;
    padding: 12px 16px;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: color 0.3s ease;
    border-radius: 11px;
    -webkit-tap-highlight-color: transparent;
  }

  .segment-btn.active {
    color: #ff007a;
  }

  .segment-btn:active {
    transform: scale(0.96);
    transition: transform 0.1s ease;
  }

  .mode-description {
    text-align: center;
    padding: 0.5rem 0;
  }

  .mode-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(90deg, #ff007a 0%, #ff7a00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .mode-subtitle {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.5;
  }

  button.ghost {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const segmentBtns = document.querySelectorAll('.segment-btn');
    const segmentBg = document.getElementById('segment-bg');

    segmentBtns.forEach((btn, index) => {
      btn.addEventListener('click', () => {
        segmentBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        if (segmentBg) {
          segmentBg.style.transform = index === 0 ? 'translateX(0)' : 'translateX(100%)';
        }
      });
    });
  });
</script>
