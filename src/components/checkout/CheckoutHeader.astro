---
import { Image } from 'astro:assets';
import flowpayLogo from '../../../public/img/flowpay-logo.png';
---

<header class="checkout-header">
  <div class="checkout-logo">
    <Image src={flowpayLogo} alt="FlowPay" class="header-logo" height={44} loading="eager" />
  </div>
  <div class="nf-progress">
    <div class="nf-fill" id="nf-fill"></div>
  </div>
</header>

<style>
  .checkout-header {
    margin-bottom: 2rem;
    text-align: center;
    padding-top: env(safe-area-inset-top, 0px);
    animation: fadeIn 0.6s ease-out both;
  }

  .checkout-logo {
    margin-bottom: 1.25rem;
    display: flex;
    justify-content: center;
  }

  .header-logo {
    height: 44px;
    width: auto;
    filter: drop-shadow(0 0 12px rgba(255, 0, 122, 0.3));
    transition: all 0.3s ease;
  }

  .nf-progress {
    width: 100%;
    height: 5px;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    overflow: hidden;
  }

  .nf-fill {
    width: 33%;
    height: 100%;
    background: linear-gradient(90deg, #ff007a, #00ff88);
    border-radius: 10px;
    transition: width 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
