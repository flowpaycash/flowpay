<style>
  .forwhom-section {
    padding: 5rem 1.25rem;
    position: relative;
    background-color: #fbfbfd;
    background-image:
      radial-gradient(at 0% 0%, rgba(255, 0, 122, 0.03) 0px, transparent 50%),
      radial-gradient(
        at 100% 100%,
        rgba(0, 212, 255, 0.03) 0px,
        transparent 50%
      );
  }

  @media (min-width: 768px) {
    .forwhom-section {
      padding: 7rem 2rem;
    }
  }

  .forwhom-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .forwhom-title {
    font-size: clamp(1.8rem, 5vw, 2.75rem);
    font-weight: 800;
    color: #1d1d1f;
    letter-spacing: -0.03em;
    line-height: 1.15;
    margin-bottom: 3rem;
    text-align: center;
  }

  .title-logo {
    display: inline-block;
    height: 0.85em;
    width: auto;
    vertical-align: middle;
    margin-bottom: 0.1em;
    filter: drop-shadow(0 0 8px rgba(255, 0, 122, 0.15));
  }

  /* Se a logo for muito branca e sumir no fundo claro, podemos inverter ou dar um leve shuffle */
  :global(.light-mode) .title-logo {
    filter: invert(1) hue-rotate(180deg) brightness(0.8);
  }

  .forwhom-table {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
  }

  .forwhom-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    padding: 1.1rem 1.75rem;
    min-height: 44px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    gap: 1rem;
    transition: background 0.15s ease;
  }

  .forwhom-row.last {
    border-bottom: none;
  }

  @media (hover: hover) {
    .forwhom-row:not(.header):hover {
      background: rgba(0, 0, 0, 0.015);
    }
  }

  @media (min-width: 480px) {
    .forwhom-row {
      padding: 1.25rem 2.5rem;
    }
  }

  .forwhom-row.header {
    padding: 0.75rem 1.75rem;
    background: rgba(0, 0, 0, 0.02);
  }

  @media (min-width: 480px) {
    .forwhom-row.header {
      padding: 0.75rem 2.5rem;
    }
  }

  .forwhom-row.header span {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
  }

  .row-who {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    font-weight: 600;
    color: #1d1d1f;
  }

  .row-icon {
    font-size: 1.1rem;
    line-height: 1;
  }

  .row-what {
    font-size: 0.9rem;
    color: #424245;
    line-height: 1.4;
  }

  @media (max-width: 479px) {
    .forwhom-row {
      grid-template-columns: 1fr;
      gap: 0.3rem;
      padding: 1rem 1.25rem;
    }

    .forwhom-row.header {
      display: none;
    }

    .row-what {
      padding-left: 1.85rem;
    }
  }
</style>
