    color: var(--light-text-secondary);
    margin-bottom: 1.25rem;
    text-transform: uppercase;
  }

  .hero-light h1 {
    font-size: clamp(2.5rem, 12vw, 4rem);
    font-weight: 800;
    letter-spacing: -0.05em;
