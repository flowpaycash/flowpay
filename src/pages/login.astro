---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import flowpayLogo from "@assets/img/flowpay-logo.png";
---

<Layout
  title="FlowPay - Acesso"
  description="Entre no FlowPay e conecte-se ao futuro dos pagamentos."
  noindex={true}
>
  <main class="login-page">
    <div class="login-bg-glow"></div>

    <a href="/" class="back-home-btn" aria-label="Voltar para a home">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
      Voltar
    </a>

    <div class="login-container">
      <header class="login-header">
        <a href="/" class="login-brand" aria-label="Voltar para a home">
          <Image
            src={flowpayLogo}
            alt="FlowPay Logo"
            class="login-logo"
            height={64}
          />
        </a>
        <h1 class="login-title">
          Acesse o <span class="gradient-text">FlowPay</span>
        </h1>
        <p class="login-subtitle">
          Escolha como deseja se conectar à sua conta soberana.
        </p>
      </header>

      <div class="bento-login-grid">
        {/* Main Access: Web3Auth */}
        <button
          class="bento-card login-card primary-access"
          id="login-web3auth"
        >
          <div class="card-content">
            <div class="icon-box">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <div class="text-group">
              <span class="card-label">Recomendado</span>
              <h3 class="card-title">Acesso Seguro</h3>
              <p class="card-desc">
                Email, Google ou Redes Sociais via Web3Auth.
              </p>
            </div>
          </div>
          <div class="card-action">
            <span>Conectar</span>
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </div>
        </button>

        {/* Secondary Access: MetaMask */}
        <button
          class="bento-card login-card secondary-access"
          id="login-metamask-aa"
        >
          <div class="card-content">
            <div class="icon-box mm">
              <img
                src="https://upload.wikimedia.org/wikipedia/commons/3/36/MetaMask_Alpha_software_logo.svg"
                alt="MetaMask"
              />
            </div>
            <div class="text-group">
              <h3 class="card-title">MetaMask</h3>
              <p class="card-desc">Smart Account (ERC-4337) otimizada.</p>
            </div>
          </div>
          <div class="card-action">
            <span>Usar Carteira</span>
          </div>
        </button>

        {/* Magic Link Email */}
        <div class="bento-card login-card magic-link-access" id="magic-link-card">
          <div class="card-content">
            <div class="icon-box ml">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <polyline points="22,4 12,13 2,4"></polyline>
              </svg>
            </div>
            <div class="text-group">
              <h3 class="card-title">Acesso por E-mail</h3>
              <p class="card-desc">Receba um link mágico no seu e-mail cadastrado.</p>
            </div>
          </div>
          <form id="magic-link-form" class="magic-form">
            <input
              type="email"
              id="magic-email"
              placeholder="seu@email.com"
              required
              autocomplete="email"
              class="magic-input"
            />
            <button type="submit" class="magic-submit" id="magic-submit-btn">
              Enviar Link
            </button>
          </form>
          <p id="magic-feedback" class="magic-feedback" style="display: none;"></p>
        </div>

        {/* Support / Help */}
        <a href="/cadastro" class="bento-card login-card guest-access">
          <div class="card-content">
            <div class="text-group">
              <h3 class="card-title">Ainda não tem conta?</h3>
              <p class="card-desc">Abra sua conta FlowPay em minutos.</p>
            </div>
          </div>
          <div class="card-action">
            <span>Cadastrar</span>
          </div>
        </a>
      </div>

      <footer class="login-footer">
        <p>
          &copy; 2026 FlowOFF Agency • Powered by <strong>NΞØ Protocol</strong>
        </p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  .login-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-x: hidden;
    padding: 2rem 1.25rem;
    background: #050505;
  }

  .login-container {
    width: 100%;
    max-width: 500px;
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .login-bg-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100vw;
    height: 100vh;
    background: radial-gradient(
      circle at center,
      rgba(0, 212, 255, 0.08) 0%,
      rgba(255, 0, 122, 0.03) 30%,
      transparent 70%
    );
    z-index: 1;
    pointer-events: none;
  }

  .login-header {
    text-align: center;
    animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .login-logo {
    height: 64px;
    width: auto;
    margin-bottom: 2rem;
    filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.2));
  }

  .login-title {
    font-size: clamp(2rem, 8vw, 2.5rem);
    font-weight: 800;
    color: #fff;
    letter-spacing: -0.04em;
    margin-bottom: 0.75rem;
  }

  .gradient-text {
    background: linear-gradient(90deg, #ff007a 0%, #ff4da6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .login-subtitle {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
  }

  /* Bento Grid Layout */
  .bento-login-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s both;
  }

  .bento-card {
    background: rgba(20, 20, 20, 0.5);
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
    cursor: pointer;
    text-align: left;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .bento-card:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: rgba(255, 255, 255, 0.15);
    background: rgba(30, 30, 30, 0.6);
  }

  .primary-access {
    grid-column: span 2;
    background: linear-gradient(
      145deg,
      rgba(255, 0, 122, 0.1),
      rgba(20, 20, 20, 0.5)
    );
    border: 1px solid rgba(255, 0, 122, 0.2);
    padding: 2rem;
  }

  .primary-access:hover {
    border-color: rgba(255, 0, 122, 0.4);
    box-shadow: 0 15px 40px rgba(255, 0, 122, 0.1);
  }

  .icon-box {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 0, 122, 0.1);
    color: #ff007a;
    margin-bottom: 1.5rem;
  }

  .icon-box.mm {
    background: rgba(246, 133, 27, 0.1);
  }

  .icon-box img {
    width: 28px;
    height: 28px;
  }

  .card-label {
    display: inline-block;
    font-size: 0.65rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 4px 10px;
    border-radius: 6px;
    background: rgba(255, 0, 122, 0.2);
    color: #ff4da6;
    margin-bottom: 0.75rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .card-desc {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.45);
    line-height: 1.4;
  }

  .card-action {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 2rem;
    font-size: 0.9rem;
    font-weight: 700;
    color: #fff;
  }

  .magic-link-access {
    grid-column: span 2;
    background: linear-gradient(
      145deg,
      rgba(0, 212, 255, 0.06),
      rgba(20, 20, 20, 0.5)
    );
    border: 1px solid rgba(0, 212, 255, 0.15);
  }

  .magic-link-access:hover {
    border-color: rgba(0, 212, 255, 0.3);
  }

  .icon-box.ml {
    background: rgba(0, 212, 255, 0.1);
    color: #00d4ff;
  }

  .magic-form {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .magic-input {
    flex: 1;
    padding: 10px 14px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.06);
    color: #fff;
    font-size: 0.9rem;
    outline: none;
    transition: border-color 0.3s;
  }

  .magic-input:focus {
    border-color: rgba(0, 212, 255, 0.4);
  }

  .magic-input::placeholder {
    color: rgba(255, 255, 255, 0.3);
  }

  .magic-submit {
    padding: 10px 20px;
    border-radius: 10px;
    border: none;
    background: rgba(0, 212, 255, 0.15);
    color: #00d4ff;
    font-weight: 700;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
  }

  .magic-submit:hover {
    background: rgba(0, 212, 255, 0.25);
  }

  .magic-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .magic-feedback {
    margin-top: 0.75rem;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .magic-feedback.success {
    color: #28a745;
  }

  .magic-feedback.error {
    color: #ff4d6a;
  }

  .guest-access {
    grid-column: span 2;
    text-decoration: none;
    padding: 1.5rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  .guest-access .card-action {
    margin-top: 0;
    background: rgba(255, 255, 255, 0.08);
    padding: 8px 16px;
    border-radius: 10px;
  }

  .back-home-btn {
    position: fixed;
    top: 24px;
    left: 24px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 100;
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
  }

  .back-home-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .login-footer {
    text-align: center;
    color: rgba(255, 255, 255, 0.25);
    font-size: 0.85rem;
    animation: fadeInUp 1s ease-out 0.3s both;
  }

  @media (max-width: 480px) {
    .bento-login-grid {
      grid-template-columns: 1fr;
    }
    .secondary-access {
      grid-column: span 2;
    }
    .login-container {
      gap: 2rem;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const loginBtn = document.getElementById(
      "login-web3auth"
    ) as HTMLButtonElement;
    const metamaskBtn = document.getElementById(
      "login-metamask-aa"
    ) as HTMLButtonElement;

    async function loadScriptOnce(id: string, src: string): Promise<void> {
      if (document.getElementById(id)) return;

      return new Promise((resolve, reject) => {
        const script = document.createElement("script");
        script.id = id;
        script.src = src;
        script.type = "module";
        script.onload = () => resolve();
        script.onerror = () =>
          reject(new Error(`Falha ao carregar script: ${src}`));
        document.head.appendChild(script);
      });
    }

    /**
     * After wallet connects, authenticate via SIWE to create a server-side session.
     * 1. Get wallet address from window.__walletAddress
     * 2. Request SIWE challenge from /api/auth/siwe-challenge
     * 3. Sign the SIWE message using the wallet provider
     * 4. Verify signature via /api/auth/siwe-verify (sets session cookie)
     */
    async function authenticateWithSIWE(): Promise<boolean> {
      const address = (window as any).__walletAddress;
      const provider = (window as any).__provider;

      if (!address || !provider) {
        console.error("SIWE: endereço ou provider não disponível");
        return false;
      }

      // 1. Request challenge (nonce + domain info)
      const challengeRes = await fetch("/api/auth/siwe-challenge", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ address }),
      });

      if (!challengeRes.ok) {
        const err = await challengeRes.json().catch(() => ({}));
        throw new Error(err.error || "Falha ao obter desafio SIWE");
      }

      const challenge = await challengeRes.json();
      const { nonce, domain, origin, chainId, expiresAt } = challenge;

      // 2. Build SIWE message string (EIP-4361 format)
      const issuedAt = new Date().toISOString();
      const siweMessage = [
        `${domain} wants you to sign in with your Ethereum account:`,
        address,
        "",
        "Autenticação FlowPay",
        "",
        `URI: ${origin}`,
        `Version: 1`,
        `Chain ID: ${chainId}`,
        `Nonce: ${nonce}`,
        `Issued At: ${issuedAt}`,
        `Expiration Time: ${expiresAt}`,
      ].join("\n");

      // 3. Sign the message via provider (works with Web3Auth + MetaMask)
      const signature = await provider.request({
        method: "personal_sign",
        params: [siweMessage, address],
      });

      // 4. Verify on server (creates session cookie)
      const verifyRes = await fetch("/api/auth/siwe-verify", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: siweMessage, signature }),
      });

      if (!verifyRes.ok) {
        const err = await verifyRes.json().catch(() => ({}));
        throw new Error(err.error || "Falha na verificação SIWE");
      }

      return true;
    }

    async function handleLogin(
      btn: HTMLButtonElement,
      scriptId: string,
      scriptSrc: string,
      type: string
    ) {
      if (btn.disabled) return;

      const originalContent = btn.innerHTML;
      btn.disabled = true;
      btn.style.opacity = "0.7";
      btn.innerHTML = `<span class="loading-spinner"></span> Conectando...`;

      try {
        await loadScriptOnce(scriptId, scriptSrc);

        if (typeof window !== "undefined" && (window as any).connectWallet) {
          const connected = await (window as any).connectWallet();
          if (!connected) {
            btn.disabled = false;
            btn.style.opacity = "1";
            btn.innerHTML = originalContent;
            return;
          }

          // Wallet connected — now authenticate via SIWE
          btn.innerHTML = `<span class="loading-spinner"></span> Autenticando...`;

          try {
            await authenticateWithSIWE();
            // Session cookie set — redirect to dashboard
            window.location.href = "/dashboard";
          } catch (siweErr: any) {
            console.error("SIWE auth falhou:", siweErr);
            // Wallet connected but SIWE failed — still allow registration
            btn.disabled = false;
            btn.style.opacity = "1";
            btn.innerHTML = originalContent;
            alert(
              siweErr.message ||
              "Falha na autenticação. Se não tem conta, cadastre-se primeiro."
            );
          }
        }
      } catch (err) {
        console.error(`Login ${type} falhou`, err);
        btn.disabled = false;
        btn.style.opacity = "1";
        btn.innerHTML = originalContent;
        alert(
          "Erro ao carregar módulo de autenticação. Por favor, tente novamente."
        );
      }
    }

    // Wallet login buttons
    if (loginBtn) {
      loginBtn.addEventListener("click", () =>
        handleLogin(
          loginBtn,
          "script-web3auth",
          "/assets/js/web3auth.smart.js",
          "web3auth"
        )
      );
    }

    if (metamaskBtn) {
      metamaskBtn.addEventListener("click", () =>
        handleLogin(
          metamaskBtn,
          "script-metamask-aa",
          "/assets/js/metamask-aa.js",
          "metamask aa"
        )
      );
    }

    // Magic link email form
    const magicForm = document.getElementById("magic-link-form") as HTMLFormElement;
    const magicEmail = document.getElementById("magic-email") as HTMLInputElement;
    const magicSubmit = document.getElementById("magic-submit-btn") as HTMLButtonElement;
    const magicFeedback = document.getElementById("magic-feedback") as HTMLParagraphElement;

    if (magicForm) {
      magicForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const email = magicEmail.value.trim();
        if (!email) return;

        magicSubmit.disabled = true;
        magicSubmit.textContent = "Enviando...";
        magicFeedback.style.display = "none";

        try {
          const res = await fetch("/api/auth/magic-start", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email }),
          });

          const data = await res.json();

          magicFeedback.style.display = "block";

          if (res.ok && data.success) {
            magicFeedback.className = "magic-feedback success";
            magicFeedback.textContent = "Link enviado! Verifique seu e-mail.";
            magicEmail.disabled = true;
          } else {
            magicFeedback.className = "magic-feedback error";
            magicFeedback.textContent = data.error || data.message || "Erro ao enviar link.";
            magicSubmit.disabled = false;
            magicSubmit.textContent = "Enviar Link";
          }
        } catch {
          magicFeedback.style.display = "block";
          magicFeedback.className = "magic-feedback error";
          magicFeedback.textContent = "Erro de conexão. Tente novamente.";
          magicSubmit.disabled = false;
          magicSubmit.textContent = "Enviar Link";
        }
      });
    }
  });
</script>

<style is:global>
  .loading-spinner {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: #fff;
    animation: spin 0.8s linear infinite;
    display: inline-block;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>
