---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import brandLogo from '../../public/img/flowpay-logo.png';
---

<Layout
  title="FlowPay - Acesse"
  description="Entre no FlowPay e conecte-se ao futuro dos pagamentos."
  noindex={true}
>
  <main class="login-page">
    <div class="login-bg-glow"></div>

    <a href="/" class="back-home-btn" aria-label="Voltar para a home">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
      Voltar
    </a>

    <div class="login-content">
      <a href="/" class="login-brand" aria-label="Voltar para a home">
        <Image src={brandLogo} alt="FlowPay Logo" class="login-logo" height={80} />
      </a>

      <div class="login-card">
        <h1 class="login-title">
          Acesse o <span class="gradient-text">FlowPay</span>
        </h1>
        <p class="login-subtitle">
          Conecte sua carteira para começar a operar com liquidez instantânea e
          auto-custódia.
        </p>

        <div class="login-actions">
          <button class="btn-premium primary" id="login-web3auth">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect x="1" y="1" width="22" height="22" rx="2.18" ry="2.18"
              ></rect>
              <line x1="7" y1="1" x2="7" y2="23"></line>
            </svg>
            Conectar com Web3Auth
          </button>

          <button
            class="btn-premium secondary"
            id="login-metamask-aa"
            style="background: rgba(246, 133, 27, 0.1); border-color: rgba(246, 133, 27, 0.2);"
          >
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/3/36/MetaMask_Alpha_software_logo.svg"
              width="20"
              height="20"
              alt="MetaMask"
            />
            MetaMask (Smart Account)
          </button>

          <div class="login-divider">
            <span>ou</span>
          </div>

          <a href="/cadastro" class="btn-premium secondary" id="login-guest">
            Criar Cadastro
          </a>
        </div>
      </div>

      <footer class="login-footer">
        <p>&copy; 2026 FlowPay Autonomous Systems</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  .login-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: calc(env(safe-area-inset-top, 0px) + 80px) 20px calc(env(safe-area-inset-bottom, 0px) + 40px);
  }

  @media (min-width: 768px) {
    .login-page {
      padding: 80px 20px 40px;
    }
  }

  /* Mobile-first: tap target 44pt, safe area aware */
  .back-home-btn {
    position: fixed;
    top: calc(env(safe-area-inset-top, 0px) + 16px);
    left: calc(env(safe-area-inset-left, 0px) + 16px);
    display: flex;
    align-items: center;
    gap: 7px;
    min-height: 44px;
    padding: 0 16px;
    color: rgba(255, 255, 255, 0.65);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    border-radius: 14px;
    background: rgba(255, 255, 255, 0.07);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: color 0.2s ease, background 0.2s ease, border-color 0.2s ease;
    z-index: 10;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    -webkit-tap-highlight-color: transparent;
  }

  @media (hover: hover) {
    .back-home-btn:hover {
      color: #fff;
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(255, 255, 255, 0.2);
    }
  }

  .back-home-btn:active {
    background: rgba(255, 255, 255, 0.15);
    transform: scale(0.96);
    transition: transform 0.1s ease;
  }

  @media (min-width: 768px) {
    .back-home-btn {
      top: 24px;
      left: 24px;
      min-height: unset;
      padding: 8px 14px;
      font-size: 0.85rem;
      border-radius: 10px;
    }
  }

  .login-bg-glow {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100vw;
    height: 100vw;
    background: radial-gradient(
      circle at center,
      rgba(255, 0, 122, 0.12) 0%,
      transparent 60%
    );
    z-index: 0;
    pointer-events: none;
  }

  .login-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 440px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .login-brand {
    animation:
      floatingLogo 6s ease-in-out infinite,
      fadeInDown 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
    position: relative;
    display: inline-block;
    text-decoration: none;
  }

  .login-brand::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140%;
    height: 140%;
    background: radial-gradient(
      circle,
      rgba(255, 0, 122, 0.2) 0%,
      transparent 70%
    );
    filter: blur(30px);
    z-index: -1;
    animation: logoGlowPulse 4s ease-in-out infinite alternate;
  }

  .login-logo {
    height: 80px;
    width: auto;
    filter: drop-shadow(0 0 15px rgba(255, 0, 122, 0.6))
      drop-shadow(0 0 30px rgba(0, 212, 255, 0.3));
    transition: filter 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @media (min-width: 768px) {
    .login-logo {
      height: 120px;
    }
  }

  @media (hover: hover) {
    .login-logo:hover {
      transform: scale(1.08) rotate(2deg);
      filter: drop-shadow(0 0 25px rgba(255, 0, 122, 0.8))
        drop-shadow(0 0 50px rgba(0, 212, 255, 0.5));
    }
  }

  @keyframes floatingLogo {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
  }

  @keyframes logoGlowPulse {
    0% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1.2);
    }
  }

  .login-card {
    background: rgba(15, 15, 15, 0.4);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 2rem 1.5rem;
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.4),
      inset 0 1px 1px rgba(255, 255, 255, 0.1);
    width: 100%;
    text-align: center;
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  @media (min-width: 480px) {
    .login-card {
      border-radius: 32px;
      padding: 3rem 2.5rem;
    }
  }

  .login-title {
    font-size: clamp(1.75rem, 5vw, 2.25rem);
    font-weight: 800;
    color: #ffffff;
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: 1rem;
    text-shadow: 0 0 40px rgba(0, 0, 0, 0.5);
  }

  .gradient-text {
    background: linear-gradient(90deg, #ff007a 0%, #ff7a00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .login-subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.05rem);
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 360px;
    margin-left: auto;
    margin-right: auto;
  }

  .login-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .btn-premium {
    padding: 16px 24px;
    border-radius: 16px;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    transition: box-shadow 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), background 0.2s ease, border-color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    width: 100%;
    min-height: 52px;
    border: none;
    cursor: pointer;
    font-family: inherit;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .btn-premium.primary {
    background: linear-gradient(135deg, #ff007a, #ff7a00);
    color: white;
    box-shadow: 0 0 30px rgba(255, 0, 122, 0.3);
  }

  @media (hover: hover) {
    .btn-premium.primary:hover {
      transform: translateY(-4px) scale(1.02);
      box-shadow: 0 0 50px rgba(255, 0, 122, 0.5);
    }
  }

  .btn-premium.primary:active {
    transform: scale(0.96);
    transition: transform 0.1s ease;
  }

  .btn-premium.secondary {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
  }

  @media (hover: hover) {
    .btn-premium.secondary:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
  }

  .btn-premium.secondary:active {
    transform: scale(0.96);
    transition: transform 0.1s ease;
  }

  .login-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 0.25rem 0;
  }

  .login-divider::before,
  .login-divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
  }

  .login-divider span {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .login-footer {
    animation: fadeInUp 0.8s ease-out 0.6s both;
    padding-bottom: max(env(safe-area-inset-bottom, 0px), 16px);
  }

  .login-footer p {
    color: rgba(255, 255, 255, 0.2);
    font-size: 0.75rem;
    font-weight: 500;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }


</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const loginBtn = document.getElementById(
      "login-web3auth"
    ) as HTMLButtonElement;
    const metamaskBtn = document.getElementById(
      "login-metamask-aa"
    ) as HTMLButtonElement;

    async function loadScriptOnce(id: string, src: string): Promise<void> {
      if (document.getElementById(id)) return;

      return new Promise((resolve, reject) => {
        const script = document.createElement("script");
        script.id = id;
        script.src = src;
        script.type = "module";
        script.onload = () => resolve();
        script.onerror = () =>
          reject(new Error(`Falha ao carregar script: ${src}`));
        document.head.appendChild(script);
      });
    }

    async function handleLogin(
      btn: HTMLButtonElement,
      scriptId: string,
      scriptSrc: string,
      type: string
    ) {
      if (btn.disabled) return;

      const originalContent = btn.innerHTML;
      btn.disabled = true;
      btn.style.opacity = "0.7";
      btn.innerHTML = `<span class="loading-spinner"></span> Carregando...`;

      try {
        await loadScriptOnce(scriptId, scriptSrc);

        if (typeof window !== "undefined" && (window as any).connectWallet) {
          const success = await (window as any).connectWallet();
          if (success) {
            window.location.href = "/cadastro";
          } else {
            // Reset se não teve sucesso (ex: usuário cancelou)
            btn.disabled = false;
            btn.style.opacity = "1";
            btn.innerHTML = originalContent;
          }
        }
      } catch (err) {
        console.error(`Login ${type} falhou`, err);
        btn.disabled = false;
        btn.style.opacity = "1";
        btn.innerHTML = originalContent;
        alert(
          `Erro ao carregar módulo de autenticação. Por favor, tente novamente.`
        );
      }
    }

    if (loginBtn) {
      loginBtn.addEventListener("click", () =>
        handleLogin(
          loginBtn,
          "script-web3auth",
          "/assets/js/web3auth.js",
          "web3auth"
        )
      );
    }

    if (metamaskBtn) {
      metamaskBtn.addEventListener("click", () =>
        handleLogin(
          metamaskBtn,
          "script-metamask-aa",
          "/assets/js/metamask-aa.js",
          "metamask aa"
        )
      );
    }

    const guestBtn = document.getElementById("login-guest");
    if (guestBtn) {
      guestBtn.addEventListener("click", () => {
        // Log access in background
        fetch("/api/auth/guest-log", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ type: "guest_login" }),
        }).catch(() => {}); // Silent fail, don't block user
      });
    }
  });
</script>

<style is:global>
  .loading-spinner {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: #fff;
    animation: spin 0.8s linear infinite;
    display: inline-block;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>
