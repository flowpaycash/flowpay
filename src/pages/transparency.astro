  <style>
    .premium-page {
      padding-top: 120px;
      padding-bottom: 80px;
      background: #f7f8fa;
      min-height: 100vh;
    }
    .page-header {
      text-align: center;
      margin-bottom: 80px;
      position: relative;
    }
    .glow-sphere {
      position: absolute;
      top: -100px;
      left: 50%;
      transform: translateX(-50%);
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(255, 0, 122, 0.05) 0%, transparent 70%);
      z-index: 0;
    }
    .premium-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 32px;
      margin-bottom: 64px;
    }
    .premium-card {
      background: #ffffff;
      padding: 40px;
      border-radius: 32px;
      border: 1px solid #edeef2;
      box-shadow: 0 10px 30px rgba(0,0,0,0.02);
      transition: transform 0.2s;
    }
    .premium-card:hover {
      transform: translateY(-4px);
    }
    .premium-card.highlight {
      border-color: #ff007a40;
      background: linear-gradient(180deg, #ffffff 0%, #fff0f7 100%);
    }
    .card-icon {
      font-size: 40px;
      margin-bottom: 24px;
    }
    .premium-list {
      list-style: none;
      padding: 0;
      margin-top: 24px;
    }
    .premium-list li {
      padding: 8px 0;
      color: #707070;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    .premium-list li::before {
      content: '‚úì';
      color: #ff007a;
      font-weight: 800;
    }
    .status-card {
      background: #1d1d1f;
      color: white;
      padding: 32px;
      border-radius: 32px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 32px;
    }
    .status-header {
      display: flex;
      align-items: center;
      gap: 16px;
    }
    .pulse-icon.online {
      width: 12px;
      height: 12px;
      background: #00ff88;
      border-radius: 50%;
      box-shadow: 0 0 12px #00ff88;
      animation: pulse 2s infinite;
    }
    .status-metrics {
      display: flex;
      gap: 48px;
    }
    .metric {
      display: flex;
      flex-direction: column;
    }
    .m-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      color: #888;
      letter-spacing: 0.1em;
    }
    .m-value {
      font-size: 1.5rem;
      font-weight: 700;
    }
    @keyframes pulse {
      0% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.5); opacity: 0.5; }
      100% { transform: scale(1); opacity: 1; }
    }
  </style>

  <!-- CSP Configuration -->
  <script is:inline src="/csp-config.js"></script>

  <!-- Scripts -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const navList = document.querySelector('.nav-list');

      if (mobileMenuToggle && navList) {
        mobileMenuToggle.addEventListener('click', function () {
          navList.classList.toggle('active');
          mobileMenuToggle.classList.toggle('active');
        });
      }

      // Smooth scrolling para links internos
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();

          const target = document.querySelector(this.getAttribute('href') || '');
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
            });
          }
        });
      });
    });
  </script>
