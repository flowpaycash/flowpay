  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "FlowPay",
      "item": "https://flowpay.cash",
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Termos de Uso",
      "item": "https://flowpay.cash/termos",
    },
  ],
