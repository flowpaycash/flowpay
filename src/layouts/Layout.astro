---
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  structuredData?: Record<string, unknown> | Record<string, unknown>[];
  bodyClass?: string;
}

const {
  title = "FlowPay — Gateway PIX + Cripto",
  description = "Receba pagamentos via PIX e criptomoedas com liquidação instantânea e prova on-chain. Gateway Web3 powered by NEO Smart Factory™.",
  ogImage = "https://flowpay.cash/img/og-flowpay-premium.png",
  ogType = "website",
  noindex = false,
  structuredData,
  bodyClass,
} = Astro.props;

const SITE = "https://flowpay.cash";
const canonicalURL = new URL(Astro.url.pathname, SITE).toString();
const pageTitle = title.includes("FlowPay") ? title : `${title} | FlowPay`;

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${SITE}/#organization`,
  name: "FlowPay",
  alternateName: "FlowOFF",
  url: SITE,
  logo: {
    "@type": "ImageObject",
    url: `${SITE}/img/flowpay-logo.png`,
    width: 512,
    height: 512,
  },
  description:
    "Gateway de pagamentos PIX + Cripto com liquidação instantânea e prova de execução on-chain.",
  legalName: "FLOWOFF MARKETING E ASSESSORIA DIGITAL LTDA",
  taxID: "43.376.355/0001-92",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Avenida 85 esq. com a Rua 137, 556",
    addressLocality: "Goiânia",
    addressRegion: "GO",
    postalCode: "74170-120",
    addressCountry: "BR",
  },
  contactPoint: {
    "@type": "ContactPoint",
    email: "neo@neoprotocol.space",
    contactType: "customer support",
    availableLanguage: "Portuguese",
  },
  foundingDate: "2021-09-01",
  sameAs: [
    "https://flowoff.xyz",
    "https://nsfactory.xyz",
    "https://neoprotocol.space",
    "https://github.com/flowpaycash",
  ],
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${SITE}/#website`,
  url: SITE,
  name: "FlowPay",
  description: description,
  publisher: {
    "@id": `${SITE}/#organization`,
  },
  inLanguage: "pt-BR",
};

const webpageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "@id": `${canonicalURL}#webpage`,
  url: canonicalURL,
  name: pageTitle,
  description: description,
  isPartOf: {
    "@id": `${SITE}/#website`,
  },
  publisher: {
    "@id": `${SITE}/#organization`,
  },
  inLanguage: "pt-BR",
};

const defaultStructuredData = [
  organizationSchema,
  websiteSchema,
  webpageSchema,
];

const extraSchema = structuredData
  ? Array.isArray(structuredData)
    ? structuredData
    : [structuredData]
  : [];

const allSchemas = [...defaultStructuredData, ...extraSchema];
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta
      name="author"
