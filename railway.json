{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "/app/data"
        ]
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "node server.mjs",
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3,
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 100
    }
}