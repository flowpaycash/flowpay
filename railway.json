{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "**/*"
        ]
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "sleepApplication": false,
        "ipv6EgressEnabled": false,
        "multiRegionConfig": {
            "us-west2": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
