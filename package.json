{
  "name": "flowpay",
  "version": "1.0.1",
  "description": "FlowPay - Integração com Woovi API para pagamentos Pix",
  "main": "index.js",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "rm -rf .astro",
    "build": "astro check && astro build",
    "preview": "npm run build && npx serve dist -p 4321",
    "astro": "astro",
    "start": "node ./dist/server/entry.mjs",
    "setup": "npm install && echo '✅ Dependências instaladas!'",
    "neo:cfg": "node tools/neo-generate-config.mjs",
    "neo:build:wallet": "npx esbuild public/assets/js/web3auth.init.ts --bundle --format=esm --target=es2022 --minify --outfile=public/assets/js/web3auth.js",
    "neo:build:smart": "./scripts/build-web3auth-smart.sh",
    "neo:build:minimal": "./scripts/build-web3auth-minimal.sh",
    "clean": "rm -rf .astro dist node_modules/.vite public/assets/js/*.js public/assets/js/*.json",
    "neo:build:aa": "npx esbuild public/assets/js/wallet.metamask-aa.ts --bundle --format=esm --target=es2022 --minify --tree-shaking=true --legal-comments=none --outfile=public/assets/js/metamask-aa.js",
    "neo:build": "npm run clean && npm run neo:cfg && npm run neo:build:smart && npm run neo:build:aa",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:error-handler": "jest tests/error-handler.test.js",
    "test:validation": "jest tests/validation-middleware.test.js",
    "test:openpix": "jest tests/openpix.test.js",
    "test:openpix:watch": "jest tests/openpix.test.js --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "e2e:install": "playwright install --with-deps chromium",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore docs --ignore standards --ignore tools --ignore tests --ignore services --ignore scripts --ignore '~/Desktop/**' --config .markdownlint.json",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore docs --ignore standards --ignore tools --ignore tests --ignore services --ignore scripts --ignore '~/Desktop/**' --config .markdownlint.json --fix",
    "mcp:start": "node scripts/mcp-server.mjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.2",
    "@astrojs/node": "^9.5.2",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "3.7.0",
    "@metamask/smart-accounts-kit": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sentry/astro": "^10.39.0",
    "@sentry/vite-plugin": "^4.9.1",
    "@web3auth/ethereum-provider": "^8.12.4",
    "@web3auth/modal": "^9.7.0",
    "astro": "^5.16.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "buffer": "^6.0.3",
    "ioredis": "^5.9.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "siwe": "^3.0.0",
    "typescript": "^5.9.3",
    "viem": "^2.43.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/better-sqlite3": "^7.6.13",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "pwa-asset-generator": "^8.1.2"
  },
  "keywords": [
    "flowpay",
    "pix",
    "woovi",
    "openpix",
    "cryptocurrency",
    "payment",
    "pwa",
    "ios",
    "mobile-first"
  ],
  "author": "FlowPay Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowpaycash/flowpay.git"
  },
  "bugs": {
    "url": "https://github.com/flowpaycash/flowpay/issues"
  },
  "homepage": "https://github.com/flowpaycash/flowpay#readme"
}