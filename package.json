{
  "name": "flowpay",
  "version": "1.0.0",
  "description": "FLOWPay - Integração com Woovi API para pagamentos Pix",
  "main": "index.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "netlify build",
    "deploy": "netlify deploy --prod",
    "functions:dev": "netlify functions:serve",
    "functions:build": "netlify functions:build",
    "setup": "npm install && echo '✅ Dependências instaladas!'",
    "neo:cfg": "node tools/neo-generate-config.mjs",
    "neo:build:wallet": "npx esbuild public/assets/js/web3auth.init.ts --bundle --format=esm --target=es2022 --minify --outfile=public/assets/js/web3auth.js",
    "neo:build:smart": "./scripts/build-web3auth-smart.sh",
    "neo:build:minimal": "./scripts/build-web3auth-minimal.sh",
    "neo:build": "npm run neo:cfg && npm run neo:build:smart",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:error-handler": "jest tests/error-handler.test.js",
    "test:validation": "jest tests/validation-middleware.test.js"
  },
  "dependencies": {
    "@web3auth/ethereum-provider": "^9.7.0",
    "@web3auth/modal": "^10.2.0",
    "axios": "^1.6.0",
    "viem": "^2.35.1"
  },
  "devDependencies": {
    "@netlify/functions": "^2.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.25.9",
    "jest": "^30.1.3",
    "netlify-cli": "^23.3.1",
    "pwa-asset-generator": "^8.0.5"
  },
  "keywords": [
    "flowpay",
    "pix",
    "woovi",
    "openpix",
    "cryptocurrency",
    "payment",
    "pwa",
    "ios",
    "mobile-first"
  ],
  "author": "FLOWPay Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowpaycash/flowpay.git"
  },
  "bugs": {
    "url": "https://github.com/flowpaycash/flowpay/issues"
  },
  "homepage": "https://github.com/flowpaycash/flowpay#readme"
}
